<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/view_line_color</item>
    </style>

    <style name="activity_container_bottom_home">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt_666_13sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/c_666</item>
    </style>

    <style name="text_view_fff_13sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_FFFFFF</item>
        <item name="android:textSize">@dimen/txt_13sp</item>
    </style>

    <style name="text_view_fragment_weather">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_FFFFFF</item>
        <item name="android:textSize">@dimen/txt_13sp</item>
        <item name="android:layout_below">@id/tv_temperature</item>
    </style>

    <style name="text_view_fff_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_FFFFFF</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <style name="default_tool_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dip_tool_bar</item>
    </style>

</resources>
